<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_b"
    android:orientation="vertical">

    <Button
        android:id="@+id/User"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/setting_bu"
        android:gravity="left|center_vertical"
        android:text="              User"
        android:textAllCaps="false"
        android:textColor="@color/color4"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/UserimageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/User"
        android:layout_alignStart="@+id/GeneralimageView"
        android:layout_marginBottom="12dp"
        android:background="@drawable/user" />


    <Button
        android:id="@+id/General"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserimageView"
        android:background="@drawable/setting_bu"
        android:gravity="left|center_vertical"
        android:text="              General"
        android:textAllCaps="false"
        android:textColor="@color/color4"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/GeneralimageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Notifications"
        android:layout_alignStart="@+id/NotificationsimageView"
        android:layout_marginBottom="12.5dp"
        android:background="@drawable/general" />

    <Button

        android:id="@+id/Notifications"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/General"
        android:background="@drawable/setting_bu"
        android:gravity="left|center_vertical"
        android:paddingStart="5dp"
        android:text="             Notifications"
        android:textAllCaps="false"
        android:textColor="@color/color4"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/NotificationsimageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Share"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12.5dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/notifications" />

    <Button
        android:id="@+id/Share"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Notifications"
        android:layout_marginTop="59dp"
        android:background="@drawable/setting_bu"
        android:gravity="left|center_vertical"
        android:text="              Share"
        android:textAllCaps="false"
        android:textColor="@color/color4"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/ShareimageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Help"
        android:layout_alignStart="@+id/NotificationsimageView"
        android:layout_marginBottom="12.5dp"
        android:background="@drawable/share" />

    <Button
        android:id="@+id/Help"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/Share"
        android:background="@drawable/setting_bu"
        android:gravity="left|center_vertical"
        android:text="              Help"
        android:textAllCaps="false"
        android:textColor="@color/color4"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/Help"
        android:layout_alignStart="@+id/ShareimageView"
        android:layout_marginBottom="12.5dp"
        android:background="@drawable/help" />


</RelativeLayout>


