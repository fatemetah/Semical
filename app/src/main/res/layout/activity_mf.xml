<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page1"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.example.family1.as_app.Mf">

    <Button
        android:id="@+id/show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/item_L"
        android:layout_alignStart="@+id/item_L"
        android:background="@drawable/butten_bg"
        android:text="Calendar"
        android:textColor="@color/b_g" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/b_g"
        android:textSize="30sp" />

    <com.example.family1.as_app.ClockView
        android:id="@+id/clockimageView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:background="@drawable/clock" />

    <LinearLayout
        android:id="@+id/item_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text">

        <ListView
            android:id="@+id/list_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
    </LinearLayout>

</RelativeLayout>
